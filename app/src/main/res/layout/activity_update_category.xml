<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_facility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iss.nus.edu.medipalappln.activity.UpdateCategoryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            >

            <EditText
                android:id="@+id/et_catName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF7F3300"
                android:textSize="20dip"
                android:textStyle="italic"
                />
            <EditText
                android:id="@+id/et_catCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF7F3300"
                android:textSize="14dip"
                android:textStyle="italic"
                android:layout_below="@id/et_catName"
                />

            <EditText
                android:id="@+id/et_catDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#FF267F00"
                android:layout_below="@id/et_catCode"

                />
<!--            <EditText
                android:id="@+id/et_catReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#FF267F00"
                android:layout_below="@id/et_catCode"
                android:focusable="false"
                />-->
<!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reminder"
                android:layout_below="@id/et_catDesc"
                android:id="@+id/tv_rem_id"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spn_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rem_id"
                >
            </Spinner>
-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SET REMINDER OPTION"
                android:layout_below="@id/et_catDesc"
                android:id="@+id/tv_set_rem_id"
                android:textStyle="bold"
                />

            <Switch
                android:id="@+id/switch_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="DISABLED"
                android:textOn="ENABLED"
                android:layout_below="@id/tv_set_rem_id"
                />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cat_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/white"
        />

</RelativeLayout>
