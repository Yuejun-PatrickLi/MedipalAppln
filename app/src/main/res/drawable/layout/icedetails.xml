<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="iss.nus.edu.medipalappln.fragment.IceDetails"
    android:background="@color/bg_main"
    >

    <LinearLayout

        android:id="@+id/Ly1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="367dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/MarqueeText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Add Emergency Details....Add Emergency Details....Add Emergency Details....Add Emergency Details...." />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearlayout1"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="20dp">

                    android:id="@+id/contactName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactName"
                        android:textSize="20dp"
                        android:hint="Name"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_weight="11.19" />

                <Spinner
                    android:id="@+id/contactPriority"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="8.68"
                    android:entries="@array/Priority"
                    android:gravity="center"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="wrap_content">
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
             <EditText

                 android:id="@+id/contactRelation"
                 android:layout_width="wrap_content"
                 android:layout_height="60dp"
                 android:layout_marginTop="20dp"
                 android:hint="Relationship"
                 android:layout_gravity="left"
                 android:gravity="center"
                 android:layout_weight="1.77"/>

            </LinearLayout>
<LinearLayout
    android:layout_width="318dp"
    android:layout_height="wrap_content">
            <EditText
                android:id="@+id/contactPhone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:hint="Phonenumber"
                android:gravity="center"
                android:inputType="phone"
                android:layout_weight="1.77"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"

            android:layout_alignParentTop="true"
            android:backgroundTint="@android:color/holo_blue_light"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="111dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/submitphone"

            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@drawable/side_nav_bar"
            android:elevation="0dp"
            android:text="SUBMIT"
            android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>



</ScrollView>